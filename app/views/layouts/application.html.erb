<!DOCTYPE html>
<html>
  <head>
    <title>Yellow Spice Orchestra</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header class="header">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
       <div class="navbar-header">
         <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
            <span class="sr-only" id="logo"><%= link_to "Yellow Spice Orchestra", recipes_path %></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <div class="navbar-brand" id="logo"><%= link_to "Yellow Spice Orchestra", recipes_path %></div>
      </div>
        <% if user_signed_in? %>
          <div id="gnavi" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li><%= link_to t('header.logout'), destroy_user_session_path, method: :delete %></li>
                <li><a>|</a></li>
                <li><%= link_to t('header.mypage'),user_path(current_user.id) %></li>
                <li><a>|</a></li>
                <li><%= link_to t('shop.index'),shops_path %></li>
                <li><a>|</a></li>
                <li><%= link_to t('shop.new'),new_shop_path %></li>
                <li><a>|</a></li>
                <li><%= link_to t('recipe.new'),new_recipe_path %></li>
            </ul>
          </div>
        <% else %>
          <div id="gnavi" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li><%= link_to t('header.signup'), new_user_registration_path %></li>
                <li><a>|</a></li>
                <li><%= link_to t('header.login'), new_user_session_path %></li>
            </ul>
          </div>
        <% end %>
    </nav>
  </header>
<body>

    <% if notice %>
      <div class="alert alert-danger" role="alert"><%= notice %></div>
    <% end %>
    <% if alert %>
      <div class="alert alert-danger" role="alert"><%= alert %></div>
    <% end %>

    <%= yield %>
  </body>
</html>

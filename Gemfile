gem 'turbolinks', '~> 5'
gem 'jbuilder', '~> 2.5'
gem 'bcrypt', '~> 3.1.7'
gem 'carrierwave', '~> 2.0'
gem 'mini_magick', '~> 4.8'
gem 'bootsnap', '>= 1.1.0', require: false
gem 'jquery-rails'
gem "jquery-turbolinks"
gem 'nested_form_fields'
gem 'nested_form'
gem 'devise'
gem 'enum_help'
gem 'ransack'
